<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_change_pass"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#09121C"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Cambiar contraseña"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_change_pass"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elige una contraseña segura"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="30dp"/>

        <!-- Nueva Contraseña -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contraseña Nueva"
            android:textColor="#B0B0B0"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>
        <EditText
            android:id="@+id/con"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rounded_input_dark"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"/>

        <!-- Confirmar Contraseña -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirma la nueva contraseña"
            android:textColor="#B0B0B0"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>
        <EditText
            android:id="@+id/con2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rounded_input_dark"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:textColor="@color/white"
            android:layout_marginBottom="40dp"/>

        <!-- Botón Cambiar -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_change_password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Cambiar contraseña"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/btn_gradient"/>

    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_change"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:background="@color/medium_blue"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>
